<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/bg_top_header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/ic_bg_topheader" />

        <ImageView
            android:id="@+id/logo_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/hologram" />

        <TextView
            android:id="@+id/textId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_photo"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Hologram Fan"
            android:textColor="@color/textcolor"
            android:textSize="17sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewFile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/textId"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/cardviewcolor"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/text_file"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:hint="Open File"
                    android:textColor="@color/textcolor"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/button_Choose_File"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    android:background="#00FFFFFF"
                    android:src="@drawable/ic_baseline_insert_drive_file_24" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/textId"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:shape="ring"
            app:cardCornerRadius="55dp">

            <ImageView
                android:id="@+id/ImageGif"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/background_video_view"
                android:padding="2dp" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button_setting_parameter"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardviewFile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_custom"
            android:text="Setting parameter"
            android:textColor="@color/textcolorbutton" />

        <LinearLayout
            android:id="@+id/title_list_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_setting_parameter"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@drawable/ic_baseline_format_list_bulleted_24" />\

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.9"
                android:text="List File"
                android:textColor="@color/textcolor"
                android:textSize="17dp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/button_send"
            android:layout_below="@id/title_list_file"
            android:layout_margin="5dp"
            android:backgroundTint="@color/cardviewcolor"
            app:cardCornerRadius="20dp">

            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/text_nofile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="No File" />
        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/button_send"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_custom"
            android:text="Run"
            android:textColor="@color/textcolorbutton" />
    </RelativeLayout>
</FrameLayout>